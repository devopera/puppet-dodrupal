#
#  Devopera Drupal vhosts
#    - dynamically generated by puppet
#

<Directory "<%= @target_path %>/<%= @title %>">
    Options Indexes MultiViews FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all
</Directory>

#  First vhost is default, so picks up ip_address requests
<VirtualHost *:80>
    ServerAdmin admin@example.com
    DocumentRoot "<%= @target_path %>/<%= @title %>/"
    ServerName  <%= @app_name %>.localhost
    ServerAlias <%= @app_name %>.<%=hostname%>
    ServerAlias drupal.localhost
    ServerAlias drupal.<%=hostname%>
    ErrorLog logs/<%= @app_name %>-error_log
    CustomLog logs/<%= @app_name %>-access_log common
</VirtualHost>
