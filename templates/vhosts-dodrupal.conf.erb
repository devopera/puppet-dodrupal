#
#  Devopera Drupal vhosts
#    - dynamically generated by puppet
#

<Directory "/var/www/html/<%= @version %>">
    Options Indexes MultiViews FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all
</Directory>

#  First vhost is default, so picks up ip_address requests
<VirtualHost *:80>
    ServerAdmin admin@example.com
    DocumentRoot "/var/www/html/<%= @version %>/"
    ServerName  <%= @version %>.localhost
    ServerAlias <%= @version %>.<%=hostname%>
    ServerAlias drupal.localhost
    ServerAlias drupal.<%=hostname%>
    ErrorLog logs/<%= @version %>-error_log
    CustomLog logs/<%= @version %>-access_log common
</VirtualHost>
